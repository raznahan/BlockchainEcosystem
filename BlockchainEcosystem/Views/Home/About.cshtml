        // create a network
        var container = document.getElementById('graph');
         var data  = @Html.Raw(Json.Encode(Model))
        var options = {
            edges: {
                arrows: {
                    to: { enabled: true, scaleFactor: 1, type: 'arrow' },
                },
                hoverWidth: 1,
                smooth: {
                    enabled: true,
                    type: 'cubicBezier',
                    roundness: 0
                }
            },
            nodes: {
                borderWidth: 4,
                shape: 'circularImage',
                shapeProperties: {
